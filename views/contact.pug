extends base.pug


block style
    style
            include ../static/style.css
            include ../static/contact.css
block content
    h1 Contact us
    form(action="/contact",method="post" class="myform")
        input(type="text",class="myInput",name="name" , placeholder="Enter your name")
        input(type="phone",class="myInput",name="phone" , placeholder="Enter your phone number")
        input(type="email",class="myInput",name="mail" , placeholder="Enter your email id")
        input(type="gender",class="myInput",name="gender" , placeholder="Enter your gender")
        button.btn Submit
        